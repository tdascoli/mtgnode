extends ../login

block body
  div.alert.alert-danger.alert-dismissable.hide
    button.close(data-dismiss='alert', aria-hidden='true') &times;
    strong Unauthorized Attempt!

  div.login-screen
    div.login-form
      h3 Welcome to MTG Node
      input#username.form-control(placeholder='Username',type='text')
      input#password.form-control(placeholder='Password',type='password')
      a#login.btn.btn-primary.btn-block Log in
      a.login-link Lost your password?

  each user in users
    div
      button.btn.btn-default.override-connect(type='button', username=user.username, password=user.password) Connect as #{user.username}

block contextual_js
  script(type="text/javascript", src="/js/src/simple/login.js")


